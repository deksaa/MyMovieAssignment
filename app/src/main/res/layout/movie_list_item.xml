<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCV"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/margin_padding_small"

    app:cardElevation="8dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/rootFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backdropIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:translationZ="1dp"
            android:src="@drawable/mobven"/>

        <View
            android:id="@+id/gradientBackgroundV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="2dp"
            android:background="@drawable/semi_transparent_gradient"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rootCL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationZ="3dp"
                android:background="?android:attr/selectableItemBackground">

            <ImageView
                    android:id="@+id/posterIV"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:src="@drawable/mobven"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:id="@+id/titleTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="@dimen/text_size_header"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/posterIV" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.100000024" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/populurityTV"/>

            <TextView
                    android:id="@+id/populurityTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Popularity"
                    android:textSize="@dimen/text_size_xnormal"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/posterIV" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.374" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/titleTV"
                    app:layout_constraintBottom_toTopOf="@+id/languageTV"/>

            <TextView
                    android:id="@+id/languageTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textSize="@dimen/text_size_xnormal"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/posterIV" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.61" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/populurityTV"
                    app:layout_constraintBottom_toTopOf="@+id/releaseDateTV"/>

            <TextView
                    android:id="@+id/releaseDateTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Release Date"
                    android:textSize="@dimen/text_size_xnormal"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/posterIV" android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.854" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/languageTV"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>